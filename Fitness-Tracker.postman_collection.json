{
    "info": {
        "name": "Fitness Tracker API",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "variable": [
        {
            "key": "baseUrl",
            "value": "http://localhost:3000",
            "type": "string"
        },
        {
            "key": "token",
            "value": "",
            "type": "string"
        }
    ],
    "item": [
        {
            "name": "Auth",
            "item": [
                {
                    "name": "Register",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"name\": \"Test User\",\n  \"email\": \"test@example.com\",\n  \"password\": \"password123\"\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/api/auth/register",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "api",
                                "auth",
                                "register"
                            ]
                        }
                    }
                },
                {
                    "name": "Login",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "const response = pm.response.json();",
                                    "pm.collectionVariables.set(\"token\", response.token);"
                                ]
                            }
                        }
                    ],
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"email\": \"demo@fitness.com\",\n  \"password\": \"demo1234\"\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/api/auth/login",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "api",
                                "auth",
                                "login"
                            ]
                        }
                    }
                },
                {
                    "name": "Get Me",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "url": {
                            "raw": "{{baseUrl}}/api/auth/me",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "api",
                                "auth",
                                "me"
                            ]
                        }
                    }
                }
            ]
        },
        {
            "name": "Workouts",
            "item": [
                {
                    "name": "Create Workout (Resistance)",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            },
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"type\": \"resistance\",\n  \"exercises\": [\n    {\n      \"name\": \"Bench Press\",\n      \"sets\": 3,\n      \"reps\": 10,\n      \"weight\": 60\n    },\n    {\n      \"name\": \"Squats\",\n      \"sets\": 4,\n      \"reps\": 12,\n      \"weight\": 80\n    }\n  ],\n  \"notes\": \"Great session!\"\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/api/workouts",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "api",
                                "workouts"
                            ]
                        }
                    }
                },
                {
                    "name": "Create Workout (Cardio)",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            },
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"type\": \"cardio\",\n  \"duration\": 30,\n  \"exercises\": [{\n    \"name\": \"running\",\n    \"duration\": 30,\n    \"distance\": 5\n  }],\n  \"notes\": \"Morning run\"\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/api/workouts",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "api",
                                "workouts"
                            ]
                        }
                    }
                },
                {
                    "name": "Get Workouts",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "url": {
                            "raw": "{{baseUrl}}/api/workouts",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "api",
                                "workouts"
                            ]
                        }
                    }
                }
            ]
        },
        {
            "name": "Meals",
            "item": [
                {
                    "name": "Create Meal",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            },
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"name\": \"Breakfast\",\n  \"foodItems\": [\n    {\n      \"name\": \"Oatmeal\",\n      \"quantity\": \"100g\",\n      \"calories\": 150,\n      \"protein\": 5,\n      \"carbs\": 27,\n      \"fat\": 3\n    },\n    {\n      \"name\": \"Banana\",\n      \"quantity\": \"1 medium\",\n      \"calories\": 105,\n      \"protein\": 1,\n      \"carbs\": 27,\n      \"fat\": 0\n    }\n  ]\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/api/meals",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "api",
                                "meals"
                            ]
                        }
                    }
                },
                {
                    "name": "Get Meals",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "url": {
                            "raw": "{{baseUrl}}/api/meals",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "api",
                                "meals"
                            ]
                        }
                    }
                }
            ]
        },
        {
            "name": "AI",
            "item": [
                {
                    "name": "Workout Suggestion",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "url": {
                            "raw": "{{baseUrl}}/api/ai/workout-suggestion",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "api",
                                "ai",
                                "workout-suggestion"
                            ]
                        }
                    }
                },
                {
                    "name": "Meal Suggestion",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "url": {
                            "raw": "{{baseUrl}}/api/ai/meal-suggestion",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "api",
                                "ai",
                                "meal-suggestion"
                            ]
                        }
                    }
                },
                {
                    "name": "Weekly Summary",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "url": {
                            "raw": "{{baseUrl}}/api/ai/weekly-summary",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "api",
                                "ai",
                                "weekly-summary"
                            ]
                        }
                    }
                }
            ]
        }
    ]
}